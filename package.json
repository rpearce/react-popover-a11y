{
  "name": "react-popover-a11y",
  "version": "0.1.1",
  "description": "Accessible React popover component",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:rpearce/react-popover-a11y.git"
  },
  "homepage": "https://github.com/rpearce/react-popover-a11y",
  "bugs": "https://github.com/rpearce/react-popover-a11y/issues",
  "author": "Robert Pearce <me@robertwpearce.com>",
  "contributors": [
    "Robert Pearce <me@robertwpearce.com> (https://robertwpearce.com)"
  ],
  "license": "ISC",
  "keywords": [
    "accessibility",
    "a11y",
    "react",
    "react-component"
  ],
  "tags": [
    "accessibility",
    "a11y",
    "react",
    "react-component"
  ],
  "files": [
    "AUTHORS",
    "LICENSE",
    "README.md",
    "src/"
  ],
  "scripts": {
    "build": "npm run build:js && npm run build:docs",
    "build:docs": "rm docs/app.js && browserify example/app.js -o docs/app.js -t [ babelify ]",
    "build:js": "rm -rf src && babel source --out-dir src",
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate",
    "coverage": "jest --coverage --coverageReporters=text-lcov | coveralls",
    "lint": "eslint --ext .js .",
    "prepublishOnly": "npm run lint && npm run build",
    "test": "npm run lint && npm run build && jest --coverage --no-cache"
  },
  "jest": {
    "clearMocks": true,
    "collectCoverageFrom": [
      "<rootDir>/source/**/*.js"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/test/setup.js",
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.2.0",
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.2.0",
    "@babel/preset-react": "^7.0.0",
    "all-contributors-cli": "^5.4.1",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.6.0",
    "babelify": "^10.0.0",
    "browserify": "^16.2.3",
    "coveralls": "^3.0.2",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.7.1",
    "enzyme-to-json": "^3.3.5",
    "eslint": "^5.10.0",
    "eslint-plugin-jest": "^22.1.2",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.11.1",
    "jest": "^23.6.0",
    "react": "^16.6.3",
    "react-dom": "^16.6.3"
  },
  "peerDependencies": {
    "react": ">= 16.3",
    "react-dom": ">= 16.3"
  },
  "dependencies": {
    "@babel/polyfill": "^7.0.0",
    "@rpearce/simple-uniqueid": "^0.1.0",
    "react-button-a11y": "^2.0.0",
    "react-with-forwarded-ref": "^0.1.0"
  }
}
